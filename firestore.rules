rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Banners collection - allow authenticated users to manage their own banners
    match /banners/{bannerId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid == request.resource.data.userId);
      
      // Allow public read access for public banners
      allow read: if resource.data.isPublic == true;
    }
    
    // Analytics collection - allow authenticated users to write analytics data
    match /analytics/{analyticsId} {
      allow write: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Allow read access to public collections for unauthenticated users
    match /{document=**} {
      allow read: if resource.data.isPublic == true;
    }
  }
}
